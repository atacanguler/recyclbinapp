<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/colorBlue"
                android:layout_marginBottom="30sp"
                android:text="Kayıt Olmadıysanız Kayıt Olabilirsiniz" />

            <TextView
                android:id="@+id/textViewAdSoyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AD SOYAD" />

            <EditText
                android:id="@+id/editTextAdSoyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />


            <TextView
                android:id="@+id/textViewTC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TC KİMLİK NO" />

            <TextView
                android:id="@+id/editTextTC"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="11111111111" />



            <TextView
                android:id="@+id/textViewTelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TELEFON NUMARASI" />

            <EditText
                android:id="@+id/editTextTelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:text="" />



            <TextView
                android:id="@+id/textViewDogumYeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOĞUM YERİ" />

            <EditText
                android:id="@+id/editTextDogumYeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:text="" />


            <TextView
                android:id="@+id/textViewDogumTarih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOĞUM TARİH" />

            <EditText
                android:id="@+id/editTextDogumTarih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:text="" />


            <TextView
                android:id="@+id/textViewSifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ŞİFREN" />

            <EditText
                android:id="@+id/editTextSifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />


            <Button
                android:id="@+id/buttonGuncelle"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BİLGİLERİMİ GÜNCELLE" />


            <Button
                android:id="@+id/buttonMENU"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ANA MENÜ" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>