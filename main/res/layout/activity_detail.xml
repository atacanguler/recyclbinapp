<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:id="@+id/scrll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                app:srcCompat="@drawable/logo" />




            <TextView
                android:id="@+id/textViewAdSoyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="AD SOYAD : " />


            <TextView
                android:id="@+id/textViewTCkimlik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="TC KİMLİK NO : " />


            <TextView
                android:id="@+id/textViewTelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="TELEFON : " />


            <Button
                android:id="@+id/buttonGuncelleme"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BİLGİLERİMİ GÜNCELLE" />


            <TextView
                android:id="@+id/textViewToplamKazandigim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="TOPLAM KAZANDIĞIM : " />


            <TextView
                android:id="@+id/textViewToplamOdenen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="TOPLAM ÖDENEN : " />

            <Button
                android:id="@+id/buttonAtikBaslat"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="30sp"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:text="GERİ DÖNÜŞÜM İÇİN BAŞLAT" />


        </LinearLayout>



</ScrollView>


</LinearLayout>